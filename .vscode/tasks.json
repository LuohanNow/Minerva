{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run pre-build web client",
            "type": "shell",
            "command": "npm start --prefix ./client/web"
        },
        {
            "label": "build web client",
            "type": "shell",
            "command": "(npm run build --prefix ./client/web) -and (mv ./client/web/build/* dist/client/web)"
        },
        {
            "label": "run post-build web client",
            "type": "shell",
            "command": "npm start --prefix ./dist/client/web"
        },
        {
            "label": "run server",
            "command": "node",    
            "args": ["dist/server/server.js"]
        },
        {
            "label": "open client app",
            "command": "explorer",    
            "windows": {
                "command": "explorer.exe"
            },
            "args": ["dist/client/index.html"]
        }
    ]
}